[{lager, [{log_root, "/tmp"}
         ,{crash_log, "crash.log"}
         ,{handlers, [{lager_syslog_backend, ["cvmfs_services", local1, info]}]}]}

,{mnesia, [{dir, "/opt/cvmfs_mnesia"}
          ,{schema_location, disc}]}

,{cvmfs_services, [{enabled_services, [cvmfs_fe, cvmfs_be, cvmfs_auth, cvmfs_lease, cvmfs_receiver_pool]},
