[{lager, [{log_root, "log/"}
         ,{crash_log, "crash.log"}
         ,{handlers, [{lager_console_backend, info}
                     ,{lager_syslog_backend, ["cvmfs_services", local1, info]}]}]}

,{mnesia, [{schema_location, disc}]}

,{cvmfs_services, [{enabled_services, [cvmfs_fe, cvmfs_be, cvmfs_auth, cvmfs_lease, cvmfs_receiver_pool]},
                   {repo_config, {file, "./config/ct_repo.config"}},
                   {max_lease_time, 3600000},  % max lease time in milliseconds
                   {receiver_config, [{size, 1}, {max_overflow, 1}]},
                   {receiver_worker_config, [{executable_path, "/tmp/cvmfs_receiver"}]}]}
].
