[{lager, [{log_root, "log/"}
         ,{crash_log, "crash.log"}
         ,{handlers, [{lager_console_backend, info}
                     ,{lager_file_backend, [{file, "error.log"}, {level, error}]}
                     ,{lager_file_backend, [{file, "info.log"}, {level, info}]}]}]}

,{cvmfs_auth, [{repo_list, [{<<"repo1">>, <<"/path/to/repo/1">>}
                           ,{<<"repo2">>, <<"/path/to/another/repo">>}
                           ,{<<"repo3">>, <<"/path/to/last/repo">>}]}

               ,{acl, [{<<"user1">>, [<<"repo1">>, <<"repo2">>, <<"repo3">>]}
                      ,{<<"user2">>, [<<"repo4">>]}
                      ,{<<"user3">>, []}]}]}

,{cvmfs_lease, [{max_lease_time, 60}]}]. % max lease time in seconds
